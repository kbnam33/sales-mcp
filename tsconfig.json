{
	"compilerOptions": {
		"target": "es2022", // Updated for modern syntax
		"lib": ["es2022"],
		"jsx": "react-jsx",
		"module": "es2022",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": [
			"@cloudflare/workers-types" // This is the critical line that was missing
		]
	},
	"include": ["src/**/*.ts", "worker-configuration.d.ts"] // Ensure this includes the types file
}